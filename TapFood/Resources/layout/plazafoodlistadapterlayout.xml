<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:contentDescription="@string/Ingresar"
        android:id="@+id/fotoproductoiv"
          android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
         android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
     <TextView
        android:id="@+id/productonametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fotoproductoiv"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/productdescriptiontv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productonametv"
        android:layout_toRightOf="@id/fotoproductoiv"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:id="@+id/linelt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/productdescriptiontv"
        android:layout_toRightOf="@id/fotoproductoiv"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/deadlinetv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/descuentotv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linelt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linelt"
        android:layout_toRightOf="@id/fotoproductoiv">
    <TextView
        android:id="@+id/pricetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="1"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/agregarbtn"
            android:text="@string/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="1"
            android:onClick="please"
            android:clickable="false"
            />
    </LinearLayout>
</RelativeLayout>
