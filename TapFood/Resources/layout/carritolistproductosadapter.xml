<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_600">
    <ImageView
        android:contentDescription="@string/Ingresar"
        android:id="@+id/imageproductcarrito"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
         android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/nameproductocarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageproductcarrito"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/linelt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameproductocarrito"
        android:layout_toRightOf="@id/imageproductcarrito"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/cantidadproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/preciototalproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    

</RelativeLayout>
