<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tucarrito"
        android:textSize="40sp"
        android:textAlignment="center"/>


    <ListView
        android:id="@+id/productoscarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/lugar"/>
    <TextView
        android:id="@+id/lugarentrega"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_weight="4"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/changelugarentrega"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="?android:attr/alertDialogIcon"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/metodopago"/>
    <TextView
        android:id="@+id/metodopago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="4" 
        />
        <Button
            android:id="@+id/metodopagobtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="?android:attr/alertDialogIcon"/>
        </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/agregarpropina"/>
    <TextView
        android:id="@+id/propina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="4"/>
        <Button
            android:id="@+id/propinabtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="?android:attr/alertDialogIcon"/>
    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/agregarpromocion"/>
    <TextView
        android:id="@+id/promocion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="4"/>
        <Button
            android:id="@+id/promocionbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="?android:attr/alertDialogIcon"/>
        </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resumen"
        android:textAlignment="center"
        android:textSize="30sp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/costoproductos"/>
        <TextView
            android:id="@+id/costoproductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>
        </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/costoservicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/costoservicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>
        </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/propina"/>
        <TextView
            android:id="@+id/propinagregada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
            android:text="@string/promocion"/>
    <TextView
        android:id="@+id/promocionagregada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>
        </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/totalpagar"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/totalpagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>
    </LinearLayout>

 <Button
        android:id="@+id/finalizarpedidobtn"
        android:text="@string/finalizarpedido"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        />
</LinearLayout>
