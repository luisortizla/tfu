<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <com.mapbox.mapboxsdk.maps.MapView
      android:id="@+id/mapViewsg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
        />
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/contentmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="15dp">
        <ImageView
            android:contentDescription="@string/abc_action_bar_home_description"
            android:id="@+id/fotorepartidormapa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
         android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
        <TextView
        android:id="@+id/nombrerepartidormapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fotorepartidormapa"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/telefonorepartidormapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombrerepartidormapa"
        android:layout_toRightOf="@id/fotorepartidormapa"
        android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/descripcionvehiculomapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/telefonorepartidormapa"
        android:layout_toRightOf="@id/fotorepartidormapa"
        android:paddingLeft="20dp"/>
    </RelativeLayout>
</FrameLayout>
